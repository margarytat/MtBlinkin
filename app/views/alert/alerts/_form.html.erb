<%= simple_form_for(@alert, url: alert_path(@alert)) do |form| %>
  <table>
    <tr>
      <th>
        Id
      </th>
      <td>
        <%= @alert.apiotics_instance %>
      </td>
    </tr>
    <tr>
      <th>
        Name
      </th>
      <td>
          <%= @alert.name %>
      </td>
    </tr>
    
      <tr>
        <th rowspan='1'>
          Led
        </th>
        <%= form.simple_fields_for :led do |fields| %>
          
          
            
              <td>
                <%= fields.input :led_state %>
              </td>
            
            
          
        <% end %>
      </tr>
    
      <tr>
        <th rowspan='1'>
          Button
        </th>
        <%= form.simple_fields_for :button do |fields| %>
          
          
            
              <td>
                <%= fields.input :safe %>
              </td>
            
            
          
        <% end %>
      </tr>
    
      <tr>
        <th>
          &nbsp;
        </th>
        <td>
          <div class="actions">
            <%= form.submit %>
          </div>
        </td>
      </tr>
  </table>
<% end %>
